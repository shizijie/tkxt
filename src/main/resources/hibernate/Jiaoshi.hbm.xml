<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.pfw.framework.wjgl.domain.Jiaoshi" table="T_WJGL_JIAOSHI">
        <comment>教师信息</comment>
        <id name="id" type="java.lang.String">
            <column name="ID" length="32" />
            <generator class="uuid.hex" />
        </id>
        <property name="gh" type="java.lang.String">
            <column name="GH" length="30">
                <comment>工号</comment>
            </column>
        </property>
        <property name="xm" type="java.lang.String">
            <column name="XM" length="300">
                <comment>姓名</comment>
            </column>
        </property>
        <property name="xb" type="java.lang.String">
            <column name="XB" length="300">
                <comment>性别</comment>
            </column>
        </property>
        <property name="bz" type="java.lang.String">
            <column name="BZ" length="30">
                <comment>备注</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
